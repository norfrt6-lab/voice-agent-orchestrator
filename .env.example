# LiveKit connection
LIVEKIT_URL=wss://your-project.livekit.cloud
LIVEKIT_API_KEY=your-api-key
LIVEKIT_API_SECRET=your-api-secret

# LLM provider
OPENAI_API_KEY=your-openai-key

# STT / TTS providers
DEEPGRAM_API_KEY=your-deepgram-key
CARTESIA_API_KEY=your-cartesia-key

# Business configuration
BUSINESS_NAME=Reliable Home Services
BUSINESS_HOURS_WEEKDAY=Monday to Friday 8am to 6pm
BUSINESS_HOURS_WEEKEND=Saturday 9am to 2pm, closed Sunday
EMERGENCY_HOURS=Available 24/7 at premium rates
SERVICE_AREA=Greater Melbourne metro area
EMERGENCY_LINE=1300-555-000
CALLBACK_SLA_MINUTES=30

# Model configuration
LLM_MODEL=gpt-4o-mini
LLM_TEMPERATURE=0.3
STT_MODEL=nova-3
STT_LANGUAGE=en
TTS_MODEL=sonic-2
TTS_VOICE_ID=79a125e8-cd45-4c13-8a67-188112f4dd22

# Guardrail thresholds
CONFUSION_THRESHOLD=3
MAX_SLOT_RETRIES=3
MAX_CONFIRMATION_ATTEMPTS=2
SLOW_RESPONSE_THRESHOLD=8.0

# Evaluation targets
TARGET_SUCCESS_RATE=0.70
TARGET_CONTAINMENT_RATE=0.85
TARGET_ESCALATION_RATE=0.15
TARGET_MAX_TURNS=16
TARGET_SLOT_FILL_RATE=0.80

# Application
LOG_LEVEL=INFO
AGENT_NAME=voice-receptionist
